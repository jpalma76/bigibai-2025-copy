<style>
  #background-mask {
  background-image: url("/fondo.webp");
  background-position: top;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  min-height: screen;

  mask-image: url("/lock.svg");
  mask-repeat: no-repeat;
  mask-position: center;
  mask-size: 30px;

  &.unlocked {
    animation: lock-reveal 4s forwards ease-in-out;
  }
}

@keyframes lock-reveal {
  0% {
    mask-size: 30px;
  }
  100% {
    mask-size: 1000vh;
  }
}
</style>

<script>
	const backgroundMask = document.getElementById("background-mask") as HTMLDivElement

	document.addEventListener("DOMContentLoaded", () => {
		backgroundMask.classList.add("unlocked")
	})
</script>


